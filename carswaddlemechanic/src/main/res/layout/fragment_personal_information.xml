<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fullSocialLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/content_margin">

            <TextView
                android:id="@+id/fullSocialTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/content_margin"
                android:layout_weight="1"
                android:text="@string/full_social" />

            <com.carswaddle.carswaddlemechanic.ui.common.ActionIndicatorView
                android:id="@+id/fullSocialActionIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/text_margin"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="@dimen/content_margin"
            android:background="@color/contentDivider" />

        <LinearLayout
            android:id="@+id/last4SocialLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/content_margin">

            <TextView
                android:id="@+id/last4SocialTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/content_margin"
                android:layout_weight="1"
                android:text="@string/first_4_social" />

            <com.carswaddle.carswaddlemechanic.ui.common.ActionIndicatorView
                android:id="@+id/last4SocialActionIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/text_margin"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="@dimen/content_margin"
            android:background="@color/contentDivider" />

        <LinearLayout
            android:id="@+id/streetAddressLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/content_margin">

            <TextView
                android:id="@+id/streetAddressTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/content_margin"
                android:text="@string/street_address" />

            <com.carswaddle.carswaddlemechanic.ui.common.ActionIndicatorView
                android:id="@+id/streetAddressActionIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/text_margin"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="@dimen/content_margin"
            android:background="@color/contentDivider" />

        <LinearLayout
            android:id="@+id/bankAccountLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/content_margin">

            <TextView
                android:id="@+id/bankAccountTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/content_margin"
                android:layout_weight="1"
                android:text="@string/bank_account" />

            <com.carswaddle.carswaddlemechanic.ui.common.ActionIndicatorView
                android:id="@+id/bankAccountActionIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/text_margin"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="@dimen/content_margin"
            android:background="@color/contentDivider"/>

        <LinearLayout
            android:id="@+id/identificationDocumentLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/content_margin">
            
            <TextView
                android:id="@+id/identificationDocumentTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/content_margin"
                android:text="@string/identification_document" />
            
            <com.carswaddle.carswaddlemechanic.ui.common.ActionIndicatorView
                android:id="@+id/identificationDocumentActionIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/text_margin"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="@dimen/content_margin"
            android:background="@color/contentDivider" />

        <LinearLayout
            android:id="@+id/dateOfBirthLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/content_margin">
            
            <TextView
                android:id="@+id/dateOfBirthTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/content_margin"
                android:layout_weight="1"
                android:text="@string/date_of_birth" />

            <com.carswaddle.carswaddlemechanic.ui.common.ActionIndicatorView
                android:id="@+id/dateOfBirthActionIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/text_margin"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="@dimen/content_margin"
            android:background="@color/contentDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:shadowColor="@color/clear">
    
    <Button
        android:id="@+id/progressButton"
        style="@style/CarSwaddleOutlineButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:minWidth="@dimen/min_width"
        android:text="title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:elevation="8dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/brandContrast"
        android:indeterminateTintMode="src_in"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/progressButton"
        app:layout_constraintEnd_toEndOf="@+id/progressButton"
        app:layout_constraintStart_toStartOf="@+id/progressButton"
        app:layout_constraintTop_toTopOf="@+id/progressButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
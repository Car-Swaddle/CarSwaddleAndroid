<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="colorPrimary">@color/brand</item>
        <item name="colorPrimaryDark">@color/brandVivid</item>
        <item name="colorAccent">@color/brand2</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="BlackTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="PlainText" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="colorPrimary">@color/content</item>
        <item name="colorPrimaryDark">@color/content</item>
        <item name="colorAccent">@color/text</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/background_color_materialbutton</item>
        <item name="android:textColor">@color/text_color_materialbutton</item>
    </style>

    <style name="CarSwaddle.ConfirmButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">64dp</item>
    </style>

    <style name="CarSwaddle.AuthButton.Filled" 
        parent="@style/Widget.MaterialComponents.Button">
        <item name="cornerFamily">rounded</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="backgroundTint">@color/brandContrast</item>
        <item name="android:textColor">@color/brand2</item>
        <item name="android:paddingTop">@dimen/content_margin</item>
        <item name="android:paddingBottom">@dimen/content_margin</item>
        <item name="android:layout_width">294dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawable">@drawable/round_24</item>
        <item name="textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/CarSwaddle.ConfirmButton</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="CarSwaddleOutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerFamily">rounded</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textColor">@color/brandContrast</item>
        <item name="android:strokeColor">@color/brandContrast</item>
        <item name="android:paddingTop">@dimen/content_margin</item>
        <item name="backgroundTint">@color/clear</item>
        <item name="android:paddingBottom">@dimen/content_margin</item>
        <item name="android:layout_width">294dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawable">@drawable/round_24</item>
        <item name="textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/CarSwaddle.ConfirmButton</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">#66FFFFFF</item>>
        <item name="strokeColor">@color/neutral8</item>
        <item name="strokeWidth">2dp</item>
    </style>
    
</resources>
